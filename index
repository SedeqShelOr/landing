<script>
document.addEventListener("DOMContentLoaded", function() {
  const paypalBtn = document.querySelector("#shaareiorModal .paypal-button");
  const submitBtn = document.querySelector("#shaareiorModal button[type='submit']");
  paypalBtn.addEventListener("click", function() {
    submitBtn.disabled = false;
    submitBtn.style.opacity = 1;
    submitBtn.style.cursor = "pointer";
  });
});
</script><script>
(async function () {
  const overlay = document.createElement('div');
  overlay.id = 'shabbat-overlay';
  overlay.style.position = 'fixed';
  overlay.style.top = '0';
  overlay.style.left = '0';
  overlay.style.width = '100vw';
  overlay.style.height = '100vh';
  overlay.style.background = 'rgba(0, 0, 0, 0.95)';
  overlay.style.color = 'gold';
  overlay.style.fontFamily = 'Arial, sans-serif';
  overlay.style.display = 'flex';
  overlay.style.flexDirection = 'column';
  overlay.style.justifyContent = 'center';
  overlay.style.alignItems = 'center';
  overlay.style.zIndex = '9999';
  overlay.style.textAlign = 'center';
  overlay.innerHTML = `
    <h1 style="font-size: 2.2em; margin-bottom: 20px;">🕯️ האתר שומר שבת</h1>
    <p style="font-size: 1.3em;">נשוב לפעול עם צאת השבת<br>שבת שלום ומבורכת 🙏</p>
  `;

  const today = new Date().toISOString().split('T')[0];
  const url = `https://www.hebcal.com/shabbat/?cfg=json&geonameid=295629&m=50&b=18&lg=s&start=${today}`;
  try {
    const res = await fetch(url);
    const data = await res.json();
    let candleLighting, havdalah;

    for (const item of data.items) {
      if (item.category === "candles") candleLighting = new Date(item.date);
      if (item.category === "havdalah") havdalah = new Date(item.date);
    }

    const now = new Date();
    if (candleLighting && havdalah && now >= candleLighting && now <= havdalah) {
      document.body.appendChild(overlay);
    }
  } catch (e) {
    console.error("Shabbat overlay error:", e);
  }
})();
</script></body>
